<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_property_tag_form" model="ir.ui.view">
        <field name="name">real_estate.property_tag.form</field>
        <field name="model">real_estate.property_tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_tag_tree" model="ir.ui.view">
        <field name="name">real_estate.property_tag.tree</field>
        <field name="model">real_estate.property_tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_property_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">real_estate.property_tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="property_tag_menu"
              name="Property Tags"
              parent="settings_menu"
              action="action_property_tags"
              sequence="14"/>

</odoo>