<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_realestate_properties_form" model="ir.ui.view">
        <field name="name">real_estate.properties.form</field>
        <field name="model">real_estate.properties</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <group>
                        <button name="action_set_status_sold" type="object" string="Sold"
                                attrs="{'invisible': [('status', 'in', ['sold','cancelled'])]}"/>
                    </group>
                    <group>
                        <button name="action_set_status_cancel" type="object" string="Cancel"
                                attrs="{'invisible': [('status', 'in', ['sold','cancelled'])]}"/>
                    </group>
                     <group>
                        <button name="action_set_sale_order" type="object" string="Sale_Order"/>
                    </group>
                    <field name="status" widget= "statusbar" statusbar_visible="new,sold,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Enter Property Title"/>
                        </h1>
                    </group>

                    <group>
                        <field name="property_tag_ids" widget="many2many_tags"
                               options="{'color_field': 'color', 'no_create_edit': True}"/>
                    </group>

                    <group>
                        <group>
                            <field name="status"/>
                            <field name="property_type_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="total_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>

                        <page name="Offers">
                                <field name="property_offer_ids"/>
                        </page>

                        <page string="Other Info">
                            <group>
                            <field name="partner_id" string="Buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_realestate_property_tree" model="ir.ui.view">
        <field name="name">real_estate.properties.tree</field>
        <field name="model">real_estate.properties</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="total_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="view_realestate_property_search" model="ir.ui.view">
        <field name="name">real_estate.properties.search</field>
        <field name="model">real_estate.properties</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Bedrooms" name="bedrooms"
                            context="{'group_by':'bedrooms'}"/>
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode'}"/>
                    <filter string="New" name="status" domain="[('status', '=', 'new')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_realestate_properties" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">real_estate.properties</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_status': 'new'}</field>
    </record>

    <menuitem id="properties_menu"
              name="Properties"
              parent="advertisement_menu"
              action="action_realestate_properties"
              sequence="10"/>

</odoo>