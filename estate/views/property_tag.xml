<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--form view-->
    <record id="view_property_tag_form" model="ir.ui.view">
        <field name="name">property_tag_form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--tree view-->
    <record id="view_property_tag_tree" model="ir.ui.view">
        <field name="name">property_tag_tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string='Property tags' editable = 'bottom'>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--this is the action part which is triggered upon clicking a menu, a button in views -->

    <record id="property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="property_tag_menu"
            name="Property Tags"
            parent='settings_menu'
            action="property_tag_action"
            sequence="10"/>
</odoo>