<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--form view-->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="offer_partner_id"/>
                        <field name="status"/>
                        <field name="property_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--tree view-->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string='Property offer'>

                <field name="price"/>
                <field name="offer_partner_id"/>
                <field name="property_id"/>
                <field name="status" decoration-success ="status =='accepted'" decoration-danger="status =='refused'" decoration-muted = "status == 'pending'"/>
                <button name="action_to_accept" type="object" string="Accept" icon="fa-check"/>
                <button name="action_to_reject" type="object" string="Cancel" icon="fa-times"/>
                <field name="validity"/>
                <field name="date_deadline"/>
<!--                <field name="property_type_id"/>-->

            </tree>
        </field>
    </record>

    <!--this is the action part which is triggered upon clicking a menu, a button in views -->

    <record id="property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
<!--        <field name="domain">[('property_type_id', '=', active_id)]</field>-->
<!--        <field name="context">{'active_id': active_id}</field>-->
    </record>

    <menuitem
            id="property_offer_menu"
            name="Property Offers"
            parent='settings_menu'
            action="property_offer_action"
            sequence="10"/>

</odoo>

